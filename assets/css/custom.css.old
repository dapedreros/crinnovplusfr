/* ===== Banner (Optimizado escritorio) ===== */
.banner {
  background: url('/assets/img/fondocr.png') no-repeat center center;
  background-size: cover;
  height: 45vh;		/* ocupacion de la pantalla */
  display: flex;
  align-items: center;
  justify-content: center;
  text-align: center;
  color: #fffff;		/* texto oscuro para contraste con overlay claro */
  position: relative;
  overflow: hidden;
}

/* Capa de oscurecimiento */
.banner::before {
  content: "";
  position: absolute;
  top: 0; left: 0;
  width: 100%; height: 100%;
  /*background-color: rgba(0, 0, 0, 0.45); /* filtro para mejorar la lectura */
  /*background-color: rgba(255, 255, 255, 0.3);  Blanco semitransparente */
  z-index: 1; 
}
/* ===== Texto del banner encima del overlay ===== */

.banner-texto {
  position: relative;
  z-index: 2;
  max-width: 800px;
  padding: 20px;
  text-shadow: 2px 2px 6px rgba(20,43,112,5); /* é¦ƒæ•¼ sombra oscura 0.0.0.0  claro 255.255.255 */
}

.banner-texto h2 {
  font-size: 2.5rem;
  margin-bottom: 15px;
  color: #ffffff;
  font-weight: bold;
}

/* Contenido centrado */
.banner-content {
  position: relative;
  z-index: 2;
  max-width: 900px;
  padding: 40px;
}

/* Té“†tulo principal */
