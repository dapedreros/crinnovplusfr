  .grid {
    grid-template-columns: 1fr; /* se apilan en columna */
  }
}

.card {
  width: 360px;        /* mismo ancho */
  height: 240px;       /* misma altura */
  padding: 30px;
  border-radius: 12px;
  color: white;
